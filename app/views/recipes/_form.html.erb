<%= form_for @recipe do |f| %>
  <h3>Title: </h3><%= f.text_field :title %><br/><br/>

  <h3>Ingredients: </h3><br/>
  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name %>
    <%= i.text_field :name %>

    <%= i.label :quantity %>
    <%= i.text_field :quantity %>
    <br>
  <% end %>

  <br/>
  <%= f.submit %>
<% end %>
